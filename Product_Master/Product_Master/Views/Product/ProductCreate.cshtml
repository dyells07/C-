@model Product_Master.Models.ProductModel

@{
    ViewData["Title"] = "ProductCreate";
}
<head>
    <link rel="stylesheet" href="~/css/ProductCreate.css" />
</head>
<h2>Product Creation</h2>
<h4>Product Creation</h4>
<hr />
<div class="row">
    <form asp-controller="Product" asp-action="CreateProduct" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label"></label>
            <textarea asp-for="ProductDescription" class="form-control"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductCost" class="control-label"></label>
            <input asp-for="ProductCost" class="form-control" />
            <span asp-validation-for="ProductCost" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stock" class="control-label"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>